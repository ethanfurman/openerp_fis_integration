<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_partners_form_xml_id" model="ir.ui.view">
                <field name="name">view.res.partner.form.xml_id</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.view_partner_form"/>
                <field eval="18" name="priority"/>
                <field name="arch" type="xml">
                    <field name="website" position="after">
                        <field name="xml_id" attrs="{'readonly':True}"/>
                    </field>
		    <field name="function" position="after">
			<field name="department" attrs="{'invisible': [('is_company','=', True)]}"/>
		    </field>
                    <field name="supplier" position="after">
                        <field name="is_carrier" />
                        <field name="fuel_surcharge" attrs="{'invisible':[('is_carrier','=',False)]}" />
                    </field>
		    <xpath expr="//form[@string='Contact']/div/group/field[@name='name']" position="replace">
			<label for="title" string="Name"/>
			<div>
			        <field name="title" class="oe_no_button oe_inline" options="{'no_open':True}"/>
				<field name="name" class="oe_inline"/>
		        </div>
		    </xpath>
		    <xpath expr="//form[@string='Contact']/div/group/field[@name='function']" position="after">
			<field name="department"/>
		    </xpath>
		    <xpath expr="//form[@string='Contact']/div/group/field[@name='email']" position="replace">
			<label for="email" string="Emails"/>
			<div>
			    <field name="email"/>
			    <field name="email2"/>
		        </div>
		    </xpath>
                    <field name="comment" position="before">
                        <group attrs="{'invisible': ['|',('is_company','=',False), ('supplier','=',False)]}">
                            <group string="Supplier Info" colspan="1"> >
                                <field name="sp_tele"/>
                                <field name="sp_fax"/>
                                <!-- <group string="Organic Certification" colspan="1"> -->
                                    <separator/>
                                    <separator/>
                                    <field name="sp_org_cert_file"/>
                                    <field name="sp_org_exp"/>
                                <!-- </group> -->
                                <!-- <group string="GMO Certification" colspan="1"> -->
                                    <separator/>
                                    <separator/>
                                    <field name="sp_non_gmo"/>
                                    <field name="sp_gmo_exp"/>
                                <!-- </group> -->
                                <!-- <group string="Kosher Certification" colspan="1"> -->
                                    <separator/>
                                    <separator/>
                                    <field name="sp_kosher"/>
                                    <field name="sp_kosher_exp"/>
                                <!-- </group> -->
                            </group>
                            <group string="Vendor Info" colspan="1">
                                <field name="vn_tele"/>
                                <field name="vn_fax"/>
                                <!-- <group string="Organic certification"> -->
                                    <separator/>
                                    <separator/>
                                    <field name="vn_org_cert"/>
                                    <field name="vn_org_cert_file"/>
                                    <field name="vn_org_exp"/>
                                <!-- </group> -->
                            </group>
                        </group>
                    </field>
                    <page name="page_history" position="before">
                        <page string="Warehouse">
                            <field name="warehouse_comment" nolabel="1"/>
                        </page>
                    </page>
                </field>
        </record>

        <record id="view_partners_tree_xml_id" model="ir.ui.view">
            <field name="name">view.res.partner.tree.xml_id</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name='xml_id'/>
                </field>
            </field>
        </record>

    </data>

    <data noupdate="1">
        <record model="ir.cron" id="res_partner_fis_update">
            <field name="name">FIS Supplier/Vendor Update</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'res.partner'"/>
            <field name="function" eval="'fis_updates'"/>
            <field name="args" eval="'()'"/>
            <field name="nextcall" eval="'2013-04-09 08:00:00'"/>
            <field name="priority">100</field>
        </record>
    </data>

</openerp>
