!!! xml1.0
~openerp
    ~data

        ~record model='ir.ui.view' #fis_view_users_form
            @model: res.users
            @inherit_id ref='base.view_users_form'
            @priority eval='10'
            @arch type='xml'
                ~xpath expr="//form[@string='Users']" position='attributes'
                    ~attribute @setup: onload_set_transmitter_domain(fis_partner_id)
                ~xpath expr="//form/sheet/notebook" position='inside'
                    ~page $Online_Account
                        ~group 
                            @fis_partner_id on_change="onchange_fis_partner(fis_partner_id)"
                            @fis_transmitter_no
                            @fis_product_cross_ref_code $Customer_Item_Code


        ~record model='ir.actions.act_window' #base.action_res_users
            @context: {'reset_password': False}
