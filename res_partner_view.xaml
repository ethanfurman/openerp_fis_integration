!!! xml1.0
%openerp
    %data

        %record model='ir.ui.view' #view_partners_form_xml_id
            @name: view.res.partner.form.xml_id
            @model: res.partner
            @inherit_id ref='base.view_partner_form'
            @priority eval='18'
            @arch type='xml'
                @website position='after'
                    @xml_id attrs="{'readonly':True}"
                @function position='after'
                    @department attrs="{'invisible': [('is_company','=', True)]}"
                @customer position='after'
                    @is_bulk
                @supplier position='after'
                    @is_carrier
                    @fuel_surcharge attrs="{'invisible':[('is_carrier','=',False)]}"
                %xpath expr="//form[@string='Contact']/div/group/field[@name='name']" position='replace'
                    %label $Name for='title'
                    %div
                        @title class='oe_no_button oe_inline' options="{'no_open':True}"
                        @name .oe_inline
                %xpath expr="//form[@string='Contact']/div/group/field[@name='function']" position='after'
                    @department
                %xpath expr="//form[@string='Contact']/div/group/field[@name='email']" position='replace'
                    %label $Emails for='email'
                    %div
                        @email
                        @email2
                @comment position='before'
                    %group attrs="{'invisible': ['|',('is_company','=',False), ('supplier','=',False)]}"
                        %group $Supplier_Info colspan='1': >
                            @sp_tele
                            @sp_fax
                            %separator
                            %separator
                            @sp_org_cert_file
                            @sp_org_exp
                            %separator
                            %separator
                            @sp_non_gmo
                            @sp_gmo_exp
                            %separator
                            %separator
                            @sp_kosher
                            @sp_kosher_exp
                        %group $Vendor_Info colspan='1'
                            @vn_tele
                            @vn_fax
                            %separator
                            %separator
                            @vn_org_cert
                            @vn_org_cert_file
                            @vn_org_exp
                %page @page_history position='before'
                    %page $Warehouse
                        @warehouse_comment nolabel='1'
                    %page $Bulk_Sets attrs="{'invisible':[('is_bulk','=',False)]}"
                        @bulk_pdf
                        @bulk_img

        %record model='ir.ui.view' #view_partners_tree_xml_id
            @name: view.res.partner.tree.xml_id
            @model: res.partner
            @inherit_id ref='base.view_partner_tree'
            @priority eval='18'
            @arch type='xml'
                @email position='after'
                    @xml_id
    %data noupdate='1'

        %record model='ir.cron' #res_partner_fis_update
            @name: FIS Supplier/Vendor Update
            @interval_number: 1
            @interval_type: days
            @numbercall: -1
            @doall eval='False'
            @model eval="'res.partner'"
            @function eval="'fis_updates'"
            @args eval="'()'"
            @nextcall eval="'2013-04-09 08:00:00'"
            @priority: 100
